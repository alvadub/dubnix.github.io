doctype html
html
  head
    base(href='/')
    meta(lang='en')
    meta(charset='utf-8')

    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    meta(name='HandheldFriendly' content='true')
    meta(name='viewport' content='width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no')

    link(rel='stylesheet' href='assets/styles.css')
    link(href='//fonts.googleapis.com/css?family=Bungee+Shade|Space+Mono|Orbitron' rel='stylesheet')

    <!--[if lt IE 9]>
    script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    script(src='//css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js')
    <![endif]-->

    block styles

    block meta
      if title
        meta(name='og:title' content=title)

    block head
      if title
        title= title

    if env === 'prod'
      script.
        /* eslint-disable */
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '#{UA_TOKEN}', 'auto');
        ga('send', 'pageview');
        /* eslint-enable */

  body
    |[![destFile "images/sprites.svg"]]

    .container
      .segment.push
        nav.grid.wrapper
          .col: a(href='/' class=(at === 'home' ? 'here' : null)) Home
          .col: a(href='/our-music/' class=(at === 'music' ? 'here' : null)) Our music
          .col: a(href='/who-we-are/' class=(at === 'about' ? 'here' : null)) Who we are?

      .segment.pop.push.white.slash
        header.wrapper
          h1.bungee DUB * NIX
          h3 Work in progress&hellip;

      block body

    script(src='//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.3.7/wavesurfer.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/vue/2.2.5/vue.runtime.min.js')
    script(src='assets/scripts.js')

    block scripts

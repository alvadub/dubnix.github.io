{
  "name": "dubnix.io",
  "version": "1.0.0",
  "config": {
    "dev": 3001,
    "www": 8081
  },
  "scripts": {
    "dev": "yarn dev:server -- -s",
    "dev:caddy": "yarn dev:server -- -P localhost:$npm_package_config_www -- caddy -port $npm_package_config_www",
    "dev:server": "tarima -dwp $npm_package_config_dev",
    "dist": "tarima -fqe prod",
    "dist:deploy": "yarn dist && ./bin/deploy"
  },
  "tarima": {
    "public": "build/www",
    "watch": [
      "Caddyfile"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "**:{fullpath/1}",
      "**/index.(css|js):{basedir}.{ext}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "www/images"
      }
    },
    "bundleOptions": {
      "bundleCache": true,
      "entryCache": true,
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "buble": "^0.15.2",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "pug": "^2.0.0-beta11",
    "rollup": "^0.41.6",
    "talavera": "^0.2.1",
    "tarima-cli": "^0.3.11",
    "vue-template-compiler": "^2.2.6"
  },
  "optionalDependencies": {
    "chokidar": "^1.6.1",
    "tarima-lr": "0.0.11"
  }
}
